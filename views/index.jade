extends layout

block includes
  script(src='/js/watchlists.js')

block content
  #main
  .hidden-xs.col-sm-2
    .list-nav
      a(href='/') Recommended
      a(href='/') Popular
      a(href='/') Latest
    .list-nav
      a(href='/') Upcoming
      a(href='/') This Weekend
      a(href='/') Next Month
      a(href='/') Pick A Day

  .col-xs-12.col-sm-6
    ul.nav.nav-tabs
      li.active
        a(href="#") All
      li
        a(href="#") Following
      li
        a(href="#") My Events
    - each result in results
      .event
        .event-venue
          if result.event.end_date
            = moment(result.event.start_date).twix(result.event.end_date, {allDay: true}).format({monthFormat: 'MMMM'})
          else
            = moment(result.event.start_date).format('MMMM D')
          |  at #{result.venue.name}

        .event-title
          a(href="/event/#{slug(result.event.title)}-#{result.event.event_id}") #{result.event.title}

        .list-recommend
          img.img-rounded(alt='', src="//avatars.io/twitter/#{result.user.username}/small", style='float: left; margin-right: 10px')
          h4
            a(href="/@" + result.user.username) #{result.user.name}
            small
              |  @#{result.user.username}
              
        .recommend-quote
          =truncate(result.event.description, 280)
        
        if user
          .recommend-action
            form(name="watchlist", action="/watchlist", method="post")
              div.form-group
                input#event_id(type="hidden", name="event_id", value="#{result.event.event_id}")
                input#status(type="hidden", name="status", value="#{result.watchlist.status}")
                .btn-group
                  button#watchlist-btn.btn.btn-default(type="submit") ğŸ”¥ Recommend        
                  
  .col-xs-12.col-sm-6
