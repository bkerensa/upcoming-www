extends layout

block content
  .col-xs-12.col-sm-10.col-md-8.col-lg-6
    .page-header
      h1= current_user.name
        small
          |  @#{current_user.username}
  
    div= current_user.description
  
    if events.length > 0
      - each event in events
        .event
          small
            if event.event.end_date
              = moment(event.event.start_date).twix(event.event.end_date, {allDay: true}).format({monthFormat: 'MMMM'})
            else
              = moment(event.event.start_date).format('MMMM D')
          h4
            a(href="/event/#{slug(event.event.title)}-#{event.event.event_id}") #{event.event.title}
            | 
            small at #{event.venue.name}
  
